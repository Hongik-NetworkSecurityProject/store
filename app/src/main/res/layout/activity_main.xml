<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/menu_bar"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_menu" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/menu_bar"
                android:drawableLeft="@drawable/ic_search" />

            <ImageButton
                android:id="@+id/search_remove_button"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/search_bar"
                android:background="@drawable/ic_text_remove" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/main_header"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_recommendation_text"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="@string/user_recommendation_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/user_recommendation_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border" />


            <TextView
                android:id="@+id/event_list_text"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="@string/event_list_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/event_list_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/border"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:id="@+id/coupon_deal_board_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coupon_deal_board_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/coupon_deal_board_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/coupon_deal_board_text"
                android:background="@drawable/border" />

        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"
        app:menu="@menu/navi_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>


